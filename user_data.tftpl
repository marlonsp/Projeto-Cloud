#!/bin/bash

sudo apt-get update
sudo apt-get install -y python3-pip python3-venv git authbind awscli

git clone https://github.com/marlonsp/Cloud-crudApp.git /home/ubuntu/crudApp
sudo chown -R ubuntu:ubuntu ~/crudApp
cd /home/ubuntu/crudApp

python3 -m venv env
source env/bin/activate
pip install -r requirements.txt

authbind --deep uvicorn main:app --host 0.0.0.0 --port 80